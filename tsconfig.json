
{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
       "@config/*": [
        "config/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    }
  },
  "extends": "expo/tsconfig.base"
}